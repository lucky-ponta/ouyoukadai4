<div class="row"> 
	<div class="col-xs-3">
	<%= render 'users/abc', user: @user, book_new: @book_new %>
    </div>
	<div class="col-xs-9">
		<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<tr>
					<th></th><th>Title</th><th>Opinion</th>
                </tr>

                <% @books.each do |book| %>

                <tr>
                
                <td>

                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
                
               
              </tr>
              <% end %>
             </table>
             </div>
             	
             

</div>
